extend layout

block content
    .container
        h1 HTML to Jade converter
        h3 Powered by&nbsp;
            a(href="https://github.com/evatechsoft/ijade", title="iJade", target="_blank") Eva Tech Soft

        .container
            form(method="post")
                .col-md-12
                    .row
                        .col-md-6
                            fieldset
                                legend HTML

                                textarea(name="html", id="html")
                                    |<!doctype html>
                                    |<html>
                                    |    <head>
                                    |      <link type="text/css" rel="stylesheet" href="/site.css" />
                                    |      <title>Hello</title>
                                    |    </head>
                                    |    <body>
                                    |      <h1>Hello world!</h1>
                                    |    </body>
                                    |</html>
                        .col-md-6
                            fieldset
                                legend Jade

                                textarea(name="jade", id="jade")

                    fieldset.actions
                        button(type="submit").to-jade Convert!